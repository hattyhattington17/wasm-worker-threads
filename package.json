{
  "name": "blog-demo",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "web.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "debug-node": "node nodejs.cjs",
    "clean": "rm -rf target && rm -rf pkg",
    "compile": "cargo build --target wasm32-unknown-unknown",
    "postprocess-node": "wasm-bindgen --keep-debug --target nodejs --out-dir pkg target/wasm32-unknown-unknown/debug/blog_demo.wasm",
    "patch-bindgen-node-output": "node patch-env.js pkg/blog_demo.js",
    "build-web": "cargo +nightly build --target wasm32-unknown-unknown && wasm-bindgen --target web --out-dir pkg target/wasm32-unknown-unknown/debug/blog_demo.wasm",
    "web": "npm run build-web && npx serve .",
    "node": "npm run clean && npm run compile && npm run postprocess-node && npm run patch-bindgen-node-output && node nodejs.cjs",
    "wasm2wat": "wasm2wat pkg/blog_demo_bg.wasm -o blog_demo_bg.wat"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^12.0.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  }
}
